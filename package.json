{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/index.js",
    "clean": "rm -rf dist && rm -rf coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "test": "vitest run --silent=false",
    "test-dev": "vitest dev --silent=false"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "helmet": "^8.0.0",
    "mongoose": "^8.8.1",
    "papaparse": "^5.4.1",
    "pino": "^9.4.0",
    "pino-http": "^10.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/papaparse": "^5.3.15",
    "@biomejs/biome": "1.9.3",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "mongodb-memory-server": "^10.1.2",
    "pino-pretty": "^11.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
